MAKEFILE      = Makefile
# local variables
OPTFLAGS      = -O4 -O5 -ffast-math
WARNFLAGS     = -Wimplicit -Wshadow
DBGFLAGS      = -g3
XTRAFLAGS     = -fsigned-char # -fno-stack-protector
# global variables
AR	      = @AR@
COMPILER      = @COMPILER@
RANLIB        = @RANLIB@
INCLUDE       = -I. -I../grid -I../cmlib -I../include
COMPFLAGS     = $(OPTFLAGS) $(WARNFLAGS) $(DBGFLAGS) $(XTRAFLAGS) $(TYPE_DEF)
# export global variables
export MAKE
export COMPILER
export INCLUDE
export COMPFLAGS

DEST	      = .
SHELL         = /bin/sh

CC	      = $(COMPILER)
CCFLAGS	      = $(COMPFLAGS) $(INCLUDE)

OBJS          = atmos.o atmos_pop.o atmos_rad.o atmos_chm.o atmos_rts.o\
		atmos_obs.o atmos_fio.o acfg.o atmos_responses.o atmos_model.o atmos_fit.o atmos_obs_tau.o atmos_rad_synthesis.o
SUBDIRS       = atmol
LIB_LIBS      = atmol/libatmol.a
                
SUBDIRS      += plpar
LIB_LIBS     += plpar/libpp.a
                
LIBRARY       = libatmos.a

.cc.o:
		$(CC) -c $(CCFLAGS) $<

.SUFFIXES:	.o .cc
	
all:            
		@list='$(SUBDIRS)' ; for subdir in $$list ; do $(MAKE) all -C $$subdir; done
		$(MAKE) $(OBJS) ${LIBS} ${MAKEFILE}
		@echo "Creating $(LIBRARY) ..."
		@$(AR) cru $(LIBRARY) $(OBJS)
		@echo -n "$(AR) cru $(LIBRARY) $(OBJS) "
		@list='$(LIB_LIBS)' ; for lib in $$list ; do\
                  echo -n `$(AR) t $$lib`" ";\
                  $(AR) x $$lib;\
                  $(AR) ru $(LIBRARY) `$(AR) t $$lib`;\
                  $(RM) -f `$(AR) t $$lib`;\
                done
		@echo ""
		$(RANLIB) $(LIBRARY)
		@echo "done"

clean:
		@list='$(SUBDIRS)' ; for subdir in $$list ; do $(MAKE) clean -C $$subdir; done
		rm -f $(OBJS) core $(LIBRARY)

distclean:
		@list='$(SUBDIRS)' ; for subdir in $$list ; do $(MAKE) distclean -C $$subdir; done
		rm -f $(OBJS) core $(LIBRARY) $(MAKEFILE)

dep:		depend

depend:
		@list='$(SUBDIRS)' ; for subdir in $$list ; do $(MAKE) depend -C $$subdir; done
		@makedepend -f $(MAKEFILE) $(SRCS)

update:		$(DEST)/$(LIBRARY) 

